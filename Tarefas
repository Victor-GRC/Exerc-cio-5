<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Lista de Tarefas</title>
</head>
<body>
    <h1>Minha Lista de Tarefas</h1>

    <!-- Botões de ação -->
    <button onclick="gerenciarTarefas(tarefas, 'adicionar')">Adicionar</button>
    <button onclick="gerenciarTarefas(tarefas, 'listar')">Listar</button>
    <button onclick="gerenciarTarefas(tarefas, 'remover')">Remover concluídas</button>

    <!-- Aqui vão aparecer as tarefas -->
    <div id="saida"></div>

    <script>
        let tarefas = [
            { descricao: "Estudar", concluida: false },
            { descricao: "Fazer exercícios", concluida: true },
            { descricao: "Trabalhar", concluida: false }
        ];

        function gerenciarTarefas(listaDeTarefas, acao) {
            let saida = document.getElementById("saida");
            
            if (acao === "adicionar") {
                let descricao = prompt("Insira uma descrição para a tarefa:");
                if (descricao) {
                    listaDeTarefas.push({ descricao: descricao, concluida: false });
                    saida.innerHTML = "<p>Tarefa adicionada!</p>";
                }
            } 
            else if (acao === "remover") {
                listaDeTarefas = listaDeTarefas.filter(function(tarefa) {
                    return tarefa.concluida === false;
                });
                saida.innerHTML = "<p>Tarefas concluídas foram removidas!</p>";
            } 
            else if (acao === "listar") {
                let texto = "<h2>Tarefas pendentes:</h2><ul>";
                for (let i = 0; i < listaDeTarefas.length; i++) {
                    if (listaDeTarefas[i].concluida === false) {
                        texto += "<li>" + listaDeTarefas[i].descricao + "</li>";
                    }
                }
                texto += "</ul>";
                saida.innerHTML = texto;
            } 
            else {
                saida.innerHTML = "<p>Ação inválida!</p>";
            }

            // Atualiza a lista global de tarefas
            tarefas = listaDeTarefas;
        }
    </script>
</body>
</html>
